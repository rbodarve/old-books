{
  "name": "oldbookstore",
  "version": "0.1.0",
  "description": "A bookstore specializing in old and vintage books with a catalog, reviews, and admin management",
  "private": true,
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "mongoose": "^8.20.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "scripts": {
    "backend": "nodemon --cwd backend server.js",
    "client": "npm --prefix frontend start",
    "dev": "concurrently \"npm run backend\" \"npm run client\""
  }
}
